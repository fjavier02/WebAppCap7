@model List<WebAppCap7.Models.QualidadeArModel>

@{
    ViewData["Title"] = "Qualidade do Ar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Qualidade do Ar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Qualidade do Ar</h2>
        <table class="table table-striped table-bordered mt-3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Estação</th>
                    <th scope="col">Data e Hora</th>
                    <th scope="col">Nível PM2.5</th>
                    <th scope="col">Nível PM10</th>
                    <th scope="col">Configuração de Alertas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.IdEstacao</td>
                        <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.NivelPm25</td>
                        <td>@item.NivelPm10</td>
                        <td>@item.ConfigAlertasIdConfiguracao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
